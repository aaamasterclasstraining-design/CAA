datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("operator")
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cases     Case[]
  auditLogs AuditLog[]
}

model Case {
  id            String     @id @default(cuid())
  caseNumber    String     @unique
  currentModule String     @default("M1")
  status        String     @default("active")
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  userId        String
  user          User       @relation(fields: [userId], references: [id])

  incidents Incident[]
  forms     Form[]
}

model Module {
  id             String @id @default(cuid())
  name           String
  order          Int    @unique
  description    String?
  requiredForms  String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Form {
  id        String   @id @default(cuid())
  caseId    String
  case      Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
  formType  String
  data      String   @default("{}")
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Incident {
  id          String   @id @default(cuid())
  caseId      String
  case        Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
  severity    String
  description String?
  status      String   @default("open")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AuditLog {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  action       String
  resourceType String?
  resourceId   String?
  changes      String   @default("{}")
  timestamp    DateTime @default(now())
}
